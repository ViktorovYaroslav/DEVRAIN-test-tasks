{
   "name": "frontend",
   "private": true,
   "version": "0.0.0",
   "type": "module",
   "scripts": {
      "dev": "vite",
      "build": "tsc -b && vite build",
      "preview": "vite preview",
      "lint": "npx @biomejs/biome lint --write",
      "format": "npx @biomejs/biome format --write",
      "check": "npx @biomejs/biome check --write",
      "typecheck": "tsc --noEmit -p tsconfig.app.json",
      "prepare": "husky",
      "backend:docker:build": "docker build -t recipe-assistant-backend ./backend",
      "backend:docker:run": "docker run -d --rm --name recipe-assistant-backend --env-file backend/.env.local -p 8000:8000 recipe-assistant-backend",
      "backend:docker:stop": "docker stop recipe-assistant-backend",
      "backend:docker:logs": "docker logs -f recipe-assistant-backend",
      "dev:full": "concurrently \"npm run backend:docker:run\" \"npm run dev\"",
      "task2:test": "cd backend && python scripts/smoke_task2.py",
      "task3:test": "docker run --rm --env-file backend/.env.local -v \"%cd%\\backend:/app\" -w /app python:3.11-slim bash -lc \"pip install --no-cache-dir -r requirements.txt && python scripts/smoke_task3.py\""
   },
   "dependencies": {
      "@headlessui/react": "^2.2.9",
      "@heroicons/react": "^2.2.0",
      "@tanstack/react-form": "^1.23.7",
      "@tanstack/react-query": "^5.90.2",
      "clsx": "^2.1.1",
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "react-markdown": "^10.1.0",
      "react-router": "^7.9.4",
      "react-syntax-highlighter": "^15.6.6",
      "react-textarea-autosize": "^8.5.9",
      "react-toastify": "^11.0.5",
      "tailwindcss": "^4.1.14",
      "uuid": "^13.0.0",
      "valibot": "^1.1.0"
   },
   "devDependencies": {
      "@biomejs/biome": "2.2.5",
      "@tailwindcss/vite": "^4.1.14",
      "@types/node": "^24.6.0",
      "@types/react": "^19.1.16",
      "@types/react-dom": "^19.1.9",
      "@types/react-syntax-highlighter": "^15.5.13",
      "@vitejs/plugin-react": "^5.0.4",
      "babel-plugin-react-compiler": "^19.1.0-rc.3",
      "concurrently": "^9.2.1",
      "globals": "^16.4.0",
      "husky": "^9.1.7",
      "lint-staged": "^16.2.3",
      "typescript": "~5.9.3",
      "typescript-eslint": "^8.45.0",
      "vite": "npm:rolldown-vite@7.1.14"
   },
   "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
   },
   "lint-staged": {
      "src/**/*.{js,jsx,ts,tsx,css}": [
         "npm run check"
      ]
   }
}
